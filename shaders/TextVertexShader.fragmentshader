in vec3 UV;
in vec3 VertColor;

out vec4 color;

uniform highp sampler2DArray TextTextureSampler;

void main()
{
  vec4 BitmapTexel = texture( TextTextureSampler, UV );
  if (BitmapTexel.a > 0.00f)
  {
    color = vec4(VertColor * BitmapTexel.rgb * BitmapTexel.a, BitmapTexel.a);
  }
  else
  {
    discard;
  }
}
